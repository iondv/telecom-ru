<!DOCTYPE html>
<html>
<head>
  <title>ION Platform</title>
  <base id="baseUrl" href="<%= baseUrl %>">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0"/>
  <link href="<%= module %>/node_modules/font-awesome-min/css/font-awesome.min.css" rel="stylesheet">
  <link href="<%= module %>/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
  <link href="<%= module %>/node_modules/icheck/skins/flat/grey.css" rel="stylesheet" type="text/css"/>
  <link href="<%= module %>/css/base.css" rel="stylesheet">
  <link href="<%= module %>/node_modules/select2/dist/css/select2.min.css" rel="stylesheet"/>
  <%- stylesheets %>
  <link href="<%= module %>/css/common<%= staticsSuffix %>.css" rel="stylesheet"/>

  <script src="<%= module %>/node_modules/jquery/dist/jquery.min.js"></script>
  <script src="<%= module %>/node_modules/js-cookie/src/js.cookie.js"></script>
  <script src="<%= module %>/node_modules/store/store.min.js"></script>
  <script src="<%= module %>/js/preload.js"></script>
  <script src="i18n/handler.js"></script>
</head>

<body data-page="<%=pageCode %>" class="<%- hidePageHead ? 'no-head' : ''%> <%- hidePageSidebar ? 'no-aside' : ''%>">
    <div><img src="https://mc.iondv.com/watch/github/app/telecom-ru" style="position:absolute; left:-9999px;" alt="iondv-metrics" /></div>

<div id="wrapper" class="clearfix">
    <% if (!hidePageSidebar) { %>
    <% include layout/sidebar %>
    <% } %>
    <% if (!hidePageHead) { %>
    <% include layout/header %>
    <% } %>

    <% include layout/sections %>

    <%- body %>
</div>

<script>
  window.sidebarSplitter && sidebarSplitter.init();
</script>

<div id="imodal-loader"></div>
<div id="imodal-side" class="imodal-side">
  <div class="imodal-side-toggle">
    <span class="glyphicon glyphicon-option-vertical"></span>
  </div>
  <iframe id="imodal-frame" name="imodal" class="imodal-frame" data-blank="about:blank"></iframe>
</div>

<div id="global-overlay" class="global-overlay">
  <div class="global-overlay-body">
    <div class="loader"><span class="fa fa-refresh fa-spin"></span></div>
  </div>
</div>

<div id="global-loader" class="global-loader">
  <span class="loader fa fa-refresh fa-spin"></span>
</div>

<script src="<%=module%>/node_modules/jquery-ui/jquery-ui.min.js"></script>
<script>
    $.widget.bridge('uibutton', $.ui.button);
</script>
<script src="<%=module%>/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="<%=module%>/node_modules/moment/min/moment.min.js" type="text/javascript"></script>
<script src="<%=module%>/node_modules/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
<script src="<%=module%>/node_modules/icheck/icheck.min.js" type="text/javascript"></script>
<script>
  var plugin_path = '<%=module%>/js/plugins/';
</script>
<script src="<%=module%>/node_modules/select2/dist/js/select2.min.js"></script>
<script src="<%=module%>/node_modules/select2/dist/js/i18n/ru.js"></script>
<script src="<%=module%>/node_modules/paper/dist/paper-core.min.js"></script>
<script src="<%=module%>/js/app<%=staticsSuffix%>.js"></script>
<script src="<%=module%>/js/common.js"></script>
<%- scripts %>
</body>
</html>
